{% extends '_layout/base.twig' %}

{% block hero %}
  {% include "_components/hero-internal.twig" with { hero_headline: "Client Galleries" } %}
{% endblock %}


{% block content %}

<main>

  <div class="container max-w-screen-xl py-6 lg:py-12">

    <ul class="flex flex-wrap">
    {% for post in posts %}

      <li class="flex w-full p-2 lg:p-4 sm:w-1/2 lg:w-1/3">
        <a href="{{post.link}}" class="w-full border border-primary hover:bg-primary hover:text-white text-center flex flex-col justify-center items-center p-6 lg:py-8">
          <h2 class="w-full font-normal text-xl m-0">
            {% if post.meta('wpcf-groom') %}
              <span>{{post.meta('wpcf-bride')}} &amp; {{post.meta('wpcf-groom')}}</span>
            {% else %}
              <span>{{post.title}}</span>
            {% endif %}
          </h2>
          {% if post.meta('wpcf-date-wedding') %}
            <p>{{'/' in post.meta('wpcf-date-wedding') ? post.meta('wpcf-date-wedding') : post.meta('wpcf-date-wedding')|date('d/m/Y')}}</p>
          {% endif %}
          <p></p>
        </a>
      </li>

    {% endfor %}
    </ul>

  </div>


  {% include "_components/pagination.twig" %}

</main>

{% endblock %}

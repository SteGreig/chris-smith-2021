<header class="flex flex-wrap justify-center pt-0" id="header">

	{% if not is_front_page %}
		<div class="container flex-wrap items-center justify-center pt-8 lg:pb-4 lg:py-12 flex">

			<a aria-label="Go to homepage" class="block lg:inline-block" href="{{site.site_url}}">
				<img class="max-w-48 lg:max-w-72" src="{{options.company_logo.url}}" alt="Chris Smith Photography Logo"/>
			</a>

		</div>
	{% endif %}

	<div class="flex my-8">

		<nav id="menu-primary" class="container px-0 menu">
			<ul class="flex flex-wrap justify-center w-full menu-primary">
				{% for item in primaryMenu.items %}
					<li class="{{item.class}}">
						<a href="{{item.link}}">{{item.name}}</a>
						{% if item.children %}
							<ul class="sub-menu">
								{% for child in item.children %}
									<li class="{{child.class}}">
										<a href="{{child.link}}" class="text-gray-500 block p-4 hover:text-black focus:text-black">{{child.name}}</a>
									</li>
								{% endfor %}
							</ul>
						{% endif %}
					</li>
				{% endfor %}
			</ul>
			<ul class="flex flex-wrap justify-center w-full mt-6">
				<li class="social mx-2 inline-block"><a class="hover:text-primary m-0" href="{{options.facebook_page}}">{{fn('icon','facebook','text-gray-500')}}</a></li>
				<li class="social mx-2 inline-block"><a class="hover:text-primary m-0" href="{{options.instagram_page}}">{{fn('icon','instagram','text-gray-500')}}</a></li>
			</ul>
		</nav>

	</div>

</header>

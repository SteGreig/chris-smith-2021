<div class="w-full pt-2 xl:px-10 2xl:py-5 flex">
  <div class="w-full bg-center bg-cover hero h-screen max-h-96 md:max-h-screen flex">
      {% set hero_small = post.thumbnail.src|resize('800') %}
      {% set hero_medium = post.thumbnail.src|resize('1200') %}
      {% set hero_large = post.thumbnail.src|resize('2000') %}
      <style>
        .hero {
          background-image: url('{{hero_small}}');
        }
        @media (min-width: 800px) {
          .hero {
            background-image: url('{{hero_medium}}');
          }
        }
        @media (min-width: 1200px) {
          .hero {
            background-image: url('{{hero_large}}');
          }
        }
      </style>

      {% if hero_headline %}

      <div class="m-auto mb-20 flex flex-col items-center max-w-screen-lg">

        <p class="text-white md:text-4xl font-bold font-headings text-center">{{hero_headline}}</p>

      </div>

      {% endif %}
      
  </div>
</div>
